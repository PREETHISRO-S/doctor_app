<div class="log-in-container">
  <%= form_for(resource, as: resource_name, class:"ui form", url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2> User Registration </h2>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class:"input" %>
    </div>

    <div class="field">
      <%= f.password_field :password,  placeholder: "Password", autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation,  placeholder: "Password Confirmation", autocomplete: "new-password", class:"input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"submit" %>
    </div>
  <% end %>

  <%= render "consumers/shared/links" %>
</div>

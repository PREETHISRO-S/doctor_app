<div class="log-in-container">
  <%= form_for(resource, as: resource_name, class:"ui form", url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2>Admin Sign up</h2>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input", placeholder: "Email", required: true %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class:"input", placeholder: "Password", required: true  %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input", placeholder: "Password", required: true  %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"submit" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>

</div>

